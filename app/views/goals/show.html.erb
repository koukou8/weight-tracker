<div class="bg-white shadow rounded-lg p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">目標詳細</h1>
    <div class="flex space-x-2">
      <%= link_to "編集", edit_goal_path(@goal), class: "bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded" %>
      <%= link_to "削除", goal_path(@goal), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-gray-50 p-4 rounded-lg">
      <h2 class="text-lg font-semibold text-gray-700 mb-2">目標情報</h2>
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">目標体重:</span>
          <span class="font-medium"><%= @goal.target_weight %> kg</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">目標日:</span>
          <span class="font-medium"><%= @goal.target_date.strftime('%Y/%m/%d') %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">残り日数:</span>
          <span class="font-medium"><%= @goal.days_remaining %> 日</span>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 p-4 rounded-lg">
      <h2 class="text-lg font-semibold text-gray-700 mb-2">進捗状況</h2>
      <div class="space-y-3">
        <div class="flex justify-between mb-1">
          <span class="text-gray-600">達成率:</span>
          <span class="font-medium"><%= @goal.progress_percentage %>%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2.5">
          <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= @goal.progress_percentage %>%"></div>
        </div>
        
        <% if current_user.weight_logs.any? %>
          <div class="mt-4">
            <div class="flex justify-between">
              <span class="text-gray-600">開始時体重:</span>
              <span class="font-medium"><%= current_user.weight_logs.order(:date).first.weight %> kg</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">現在の体重:</span>
              <span class="font-medium"><%= current_user.current_weight %> kg</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">目標まであと:</span>
              <span class="font-medium"><%= (current_user.current_weight - @goal.target_weight).abs.round(1) %> kg</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "一覧に戻る", goals_path, class: "text-blue-600 hover:text-blue-900" %>
  </div>
</div>

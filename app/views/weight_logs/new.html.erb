<div class="bg-white shadow rounded-lg p-6">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">新規体重記録</h1>

  <%= form_with(model: @weight_log, local: true) do |form| %>
    <% if @weight_log.errors.any? %>
      <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold mb-2"><%= pluralize(@weight_log.errors.count, "error") %> が発生しました:</h2>
        <ul class="list-disc pl-5">
          <% @weight_log.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :date, "日付", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.date_field :date, value: Date.current, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= form.label :weight, "体重 (kg)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :weight, step: 0.1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= form.label :body_fat, "体脂肪率 (%)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :body_fat, step: 0.1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>

    <div class="mb-6">
      <%= form.label :memo, "メモ", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :memo, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "記録する", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded" %>
      <%= link_to "キャンセル", weight_logs_path, class: "text-gray-600 hover:text-gray-900" %>
    </div>
  <% end %>
</div>
